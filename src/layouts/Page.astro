---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
const {frontmatter} = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={frontmatter.title} />
	</head>

	<body class="flex flex-col items-stretch bg-gray-100 dark:bg-gray-900">
		<Header />
		<main class="bg-gray-50 dark:bg-gray-800 min-h-screen py-5">
			<div class="prose prose-gray prose-p:text-black prose-li:text-black prose-table:text-black dark:prose-invert dark:prose-p:text-white dark:prose-li:text-white dark:prose-table:text-white max-w-max px-10">
				<slot />
			</div>
		</main>
		<Footer />
	</body>
</html>
